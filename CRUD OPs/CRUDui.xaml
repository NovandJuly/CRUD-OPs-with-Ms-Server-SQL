<Window x:Class="CRUD_OPs.CRUDui"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CRUD_OPs"
        mc:Ignorable="d"
        Title="CRUD Apps" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="45px"/>
            <RowDefinition Height="45px"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <DockPanel Grid.Row="1" Margin="5" LastChildFill="False">

            <Button Height="30" Width="80" Click="AddButton_clicked" 
                    Content="Add" FontSize="14" FontWeight="DemiBold" 
                    Name="AddButton" Margin="0 0 10 0"
                    HorizontalAlignment="Left" ToolTip="Add client">
                <Button.Effect>
                    <DropShadowEffect Color="Black" BlurRadius="6" ShadowDepth="2" Opacity="0.3"/>
                </Button.Effect>
            </Button>

            <Button Width="80" Content="Edit" ToolTip="Edit client"
                     Name="EditButton" FontSize="14" FontWeight="DemiBold" Click="EditButton_Click">
                <Button.Effect>
                    <DropShadowEffect Color="Black" BlurRadius="5" ShadowDepth="2" Opacity="0.3"/>
                </Button.Effect>
            </Button>

            <Button  Height="30" Width="80" Content="Delete" 
                     Name="DeleteButton" FontSize="14" FontWeight="DemiBold" 
                     DockPanel.Dock="Right" ToolTip="Delete client" Click="DeleteButton_Click">
                <Button.Effect>
                    <DropShadowEffect Color="Black" BlurRadius="6" ShadowDepth="2" Opacity="0.3"/>
                </Button.Effect>
            </Button>
        </DockPanel>

        <DataGrid x:Name="DataGridName" ColumnWidth="*" 
                  AlternatingRowBackground="#f2f2f2"
                  Grid.Row="2" CanUserAddRows="False"
                  SelectionMode="Single" BorderBrush="#ccc"
                  Background="White" BorderThickness="1"
                  Margin="5" AutoGenerateColumns="False"
                  HorizontalAlignment="Stretch"
                  VerticalAlignment="Stretch"
                  ColumnHeaderHeight="30" AlternationCount="2"
                  RowHeight="28" IsReadOnly="True">
            <DataGrid.Resources>
                <Style TargetType="DataGridColumnHeader">
                    <Setter Property="Background" Value="WhiteSmoke"/>
                    <Setter Property="FontSize" Value="20"/>
                    <Setter Property="FontFamily" Value="Candara"/>
                    <Setter Property="FontWeight" Value="ExtraBlack"/>
                </Style>
                <Style TargetType="DataGridCell">
                    <Setter Property="FontSize" Value="18"/>
                </Style>

                <Style TargetType="DataGridRow">
                    <Setter Property="Background" Value="White"/>
                    <Style.Triggers>
                        <Trigger Property="AlternationIndex" Value="1">
                            <Setter Property="Background" Value="#f2f2f2"/>
                        </Trigger>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Background" Value="LightGreen"/>
                        </Trigger>
                        <Trigger Property="IsSelected" Value="True">
                            <Setter Property="Background" Value="LightSkyBlue"/>
                        </Trigger>
                    </Style.Triggers>
                </Style>
            </DataGrid.Resources>
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="50"/>
                <DataGridTextColumn Header="Name" Binding="{Binding Name}"/>
                <DataGridTextColumn Header="Email" Binding="{Binding Email}" />
                <DataGridTextColumn Header="Phone" Binding="{Binding Phone}" />
                <DataGridTextColumn Header="Date" Binding="{Binding Date}" />
            </DataGrid.Columns>
        </DataGrid>

    </Grid>
</Window>
