<Window x:Class="CRUD_OPs.ClientManager"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CRUD_OPs"
        mc:Ignorable="d" ResizeMode="CanMinimize"
        Title="ClientManager" Height="400" Width="500">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="70px"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="70px"/>
        </Grid.RowDefinitions>

        <Label Content="CREATE CLIENT" FontSize="25" 
               FontWeight="DemiBold" HorizontalAlignment="Center" 
               VerticalAlignment="Center" Name="CreateEditLabel"/>
        <StackPanel Grid.Row="2" Orientation="Horizontal"
                    HorizontalAlignment="Center">
        <Button x:Name="SaveButton" Height="30" 
                Width="80" Content="Save" 
                FontSize="16" Margin="105 0 0 0" Click="SaveButton_Click"/>
        <Button x:Name="CancelButton" Height="30" 
                Width="80" Content="Cancel" 
                FontSize="16" Margin="10 0 0 0" Click="CancelButton_Click"/>
        </StackPanel>

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="90px"/>
                <ColumnDefinition Width="120"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="90px"/>
            </Grid.ColumnDefinitions>

            <!--1st Stack Panel-->
            <StackPanel Grid.Column="1" Orientation="Vertical">
                <Label Content="Client ID:" Grid.Column="1"
                           FontSize="20"/>
                <Label Content="First Name:"
                           FontSize="20" Grid.Column="1"/>
                <Label Content="Last Name:"
                           FontSize="20" Grid.Column="1"/>
                <Label Content="Email" FontSize="20" 
                           Grid.Column="1"/>
                <Label Content="Phone:" FontSize="20" 
                           Grid.Column="1"/>
                <Label Content="Address:" FontSize="20" 
                           Grid.Column="1"/>
            </StackPanel>

            <!--2nd Stack Panel-->
            <StackPanel Grid.Column="2" Orientation="Vertical">
                <TextBox x:Name="IdTBox" Margin="0 5"
                         Height="25" FontSize="18" Visibility="Hidden">
                    style
                 
                </TextBox>
                <TextBox x:Name="FirstnameTBox" Height="26"
                         Margin="0 8" FontSize="18" />
                <TextBox x:Name="LastNameTBox" Height="26"
                         Margin="0 5" FontSize="18"/>
                <TextBox x:Name="EmailTBox" Height="26"
                         Margin="0 7" FontSize="18"/>
                <TextBox x:Name="PhoneTBox" Height="26"
                         Margin="0 6" FontSize="18"/>
                <TextBox x:Name="AddressTBox" Height="26"
                         Margin="0 7" FontSize="18"/>
            </StackPanel>
        </Grid>

    </Grid>
</Window>
